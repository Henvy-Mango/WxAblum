.top {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.preview {
    width: 100%;
    height: 100%;
    background: #fff;
}

.preview-success {
    margin-top: 22rpx;
    font-size: 40rpx;
}

.preview-button-wrap {
    margin-top: 70rpx;
    text-align: left;
}

.preview-button {
    display: inline-block;
    position: relative;
    text-align: center;
    box-sizing: border-box;
    font-size: 32rpx;
    text-decoration: none;
    -webkit-tap-highlight-color: transparent;
    overflow: hidden;
    width: 288rpx;
    height: 85rpx;
    background-color: #eff3f5;
    color: #f5756c;
    line-height: 85rpx;
    border-radius: 5rpx;
}

.preview-button:first-child {
    margin-right: 20rpx;
}

.preview-outer {
    margin-top: 50rpx;
    position: relative;
    text-align: center;
    width: 590rpx;
}

.preview-inner {
    padding-top: 50rpx;
    position: relative;
    text-align: center;
    width: 590rpx;
}

.preview-image {
    display: block;
    margin: 0 auto;
    width: 590rpx;
    height: 590rpx;
}

.preview-video {
    margin-top: 30rpx;
    display: block;
    margin: 0 auto;
    width: 590rpx;
    height: 415rpx;
}