<van-dialog id="van-dialog" />
<view class="back">
  <scroll-view class="tip_container">
    <view class="tip">
      <text class="tip_date">{{tip.date}}</text>
      <image mode="widthFix" class="tip_img" src="{{tip.img}}" catchtap="ClickImg" />
      <view class="tip_msg">{{tip.msg}}</view>
    </view>
  </scroll-view>

  <!-- 页面跳转按钮区域 -->
  <view class="btnArea" style="color:#515151;height:{{navigateHeight * navigationList.length + 3}}rpx;">
    <view class="navigateBtn" wx:for="{{navigationList}}" bindtap="{{item.bindEvent}}" data-item="{{item}}"
      style="height:{{navigateHeight + 1}}rpx;">
      <!-- 按钮 -->
      <view class="btn" id="{{'id' + item.id}}">
        <text class="navigateName">{{item.name}}</text>
        <view class="navigateArrow" style="width:{{navigateHeight}}rpx;">
          <van-icon name="arrow" />
        </view>
      </view>
      <!-- 分割线 -->
      <view class="line" wx:if="{{item.id != navigationList.length}}" />
    </view>
  </view>

  <!-- 底部文字区域 -->
  <view class="bottomText">Copyright<view style="color:#9dbdc6" bindtap="author">@Naomi</view>.All Rights
    Reserved.</view>
</view>