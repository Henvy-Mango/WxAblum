page {
  background-color: #5a6b72;
}

.container {
  width: 100%;
  height: 100%;
  min-height: 242rpx;
}

.album-container {
  margin: 3rpx;
  min-height: 242rpx;
}

.item-group {
  display: flex;
}

.album-item {
  flex: 1;
  text-align: center;
  margin: 0 3rpx 3rpx 3rpx;
  width: 244rpx;
  height: 242rpx;
  line-height: 242rpx;
}

.album-item.empty {
  background: transparent;
}

.top-button {
  background: #eff3f5;
}

.upload-tips {
  color: #888;
  display: block;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 20rpx;
}

.upload-wrap {
  color: #ccc;
  background-color: #fff;
  border: 1px solid #888;
  position: absolute;
  left: 6rpx;
  top: 86rpx;
  width: 242rpx;
  height: 239rpx;
  text-align: center;
  line-height: 240rpx;
  overflow: hidden;
}

.upload-add {
  display: block;
  position: relative;
  text-align: center;
  margin: 0 3rpx 3rpx 3rpx;
  width: 244rpx;
  height: 242rpx;
  line-height: 242rpx;
  color: #ccc;
  overflow: hidden;
  box-sizing: border-box;
  background: #fff;
}

.upload-add image {
  position: absolute;
  left: 0;
  width: 240rpx;
  height: 100rpx;
  top: 70rpx;
}

.upload-add text {
  position: absolute;
  width: 240rpx;
  height: 30rpx;
  left: 0;
  top: 80rpx;
  color: #888;
}

.tips {
  position: relative;
  width: 240rpx;
  bottom: 85rpx;
  font-size: 24rpx;
  color: #888;
}

.upload-image {
  color: #ccc;
  background-color: #fff;
  border: 1px solid #888;
  position: absolute;
  left: 6rpx;
  top: 86rpx;
  width: 240rpx;
  height: 239rpx;
  text-align: center;
  line-height: 240rpx;
  overflow: hidden;
}

.upload-image image {
  position: absolute;
  left: 0;
  width: 242rpx;
  height: 200rpx;
  top: 200rpx;
}

.upload-image text {
  position: absolute;
  width: 242rpx;
  height: 50rpx;
  left: 0;
  bottom: 20rpx;
  color: #888;
}

.swiper-container {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #272f32;
}

.swiper-container image {
  width: 100%;
  height: 100%;
}

action-sheet-item.warn {
  color: #e64340;
}

.loading {
  height: 30px;
  background: #e7eff7;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading text {
  font-size: 15px;
  color: #888;
}